char matriz [15][15];
  int fim=0;
  char tecla;
  int x=7;
  int y=7;
  char chave='@';
  char porta='D';
int main()
{
	setlocale(LC_ALL, "Portuguese");
	int escolha_menu;
	int lixo;
	while(escolha_menu != 3)
	{

		system("cls || clear");
